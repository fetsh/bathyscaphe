begin
  require 'bones'
rescue LoadError
  abort '### Please install the "bones" gem ###'
end

Bones {
  name    'bathyscaphe'
  authors 'Ilia Zemskov'
  email   'ilzoff@gmail.com'
  url     'https://github.com/ilzoff/bathyscaphe'
  description "Simple gem to download subtitles from addic7ed.com"
  summary "Simple gem to download subtitles for tv-show episodes from addic7ed.com. Subtitles are searched based on file name."
  
  gem.dependencies [
    ["nokogiri"]
  ]
}